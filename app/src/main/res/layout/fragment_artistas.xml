<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentsTab.Artistas"
    android:background="@color/black">

    <TextView
        android:id="@+id/text_titulo_artistas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Seus artistas aparecerão aqui"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="220dp"
        android:gravity="center"
        />
    <TextView
        android:id="@+id/text_descricao_artistas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Agora, você pode adicionar alguns dos seus artistas favoritos."
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/text_titulo_artistas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"



        />
    <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Adicionar Artistas"
        app:layout_constraintTop_toBottomOf="@id/text_descricao_artistas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="15dp"
        android:backgroundTint="@color/white"
        app:cornerRadius="32dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>